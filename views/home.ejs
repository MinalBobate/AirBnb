<%- include('./partials/header') %>

    <nav class="conatainer mt-3">
        <div class="navigationBar">
            <!-- logo -->
            <div class="logo">
                <a href="/"><i class="fa-brands fa-airbnb"></i>airbnb</a>
            </div>
            <!-- search box -->
            <div class="search-box">
                <span class="searchBox-span">Anywhere</span><span>|</span>
                <span class="searchBox-span">Any week</span><span>|</span>
                <span class="searchBox-span" style="color: grey; cursor: pointer;">
                    <form action="/search" method="get"><input class="searchInput" type="text" name="query" size="10"
                            placeholder="search" required><button class="searchButton" type="submit"
                            onclick="this.form.submit"><span class=""><i
                                    class="fa-solid fa-magnifying-glass"></i></span></button></form>
                </span>
            </div>
            <!-- Become Host -->
            
            <div style="display: flex; justify-content: space-around;">
                <div class="becomeHost">
                    <button class="host" id="becomeHostBtn" type="button"><a
                            style="color: inherit; text-decoration: none;" href="property/registerProperty">Become a
                            host</a></button>
                </div>
                <div class="globeBtn">
                    <button class="host" type="button"><i class="fa-solid fa-globe"></i></button>
                </div>

                <button class="loginSignupBtn" type="button">
                    <div class="loginSignup">
                        <span><i class="fa-solid fa-bars"></i></span>
                        <span style="margin-left: 10px;">
                            
                          
                            


                        </span>
                   </div>
                </button>
        </div>
    </nav>
    <hr>

    <!-- login sign up pop up on button click -->
    <div id="popupDiv">
        <ul class="loginPopup">
            <li><button><a style="color: inherit; text-decoration: none;" href="/user/signUp">Sign up</a></button></li>
            <li><button><a style="color: inherit; text-decoration: none;" href="/user/signIn">Login</a></button></li>
            <hr>
            <li><button disabled>Host your home</button></li>
            <li><button disabled>Host an experience</button></li>
            <li><Button><a style="color: inherit; text-decoration: none;" href="/help">Help</a></Button></li>
        </ul>
    </div>

    <%- include("belownavsection") %>

      <div class="container">
            <div class="row pt-3 px-1">
                <% if(properties.length==0) { %>
                    <h3>No hotels found!!!</h3>
                    <% } else { %>
                        <% for(let i=0; i < properties.length; i++) { %>
                            <!-- Image Slider -->
                            <div class="col-lg-4" style="width: 16rem;">
                                <a href="/property/<%=properties[i]._id%>"
                                    style="text-decoration: none; color: inherit;">
                                    <div id="image-carousel<%=i%>" class="carousel slide" data-bs-interval="false">
                                        <div class="carousel-indicators">
                                            <button type="button" data-bs-target="#image-carousel<%=i%>"
                                                data-bs-slide-to="0" class="active" aria-current="true"
                                                aria-label="Slide 1"
                                                style="width: 6px; height: 6px; border-radius: 50%;"></button>
                                            <button type="button" data-bs-target="#image-carousel<%=i%>"
                                                data-bs-slide-to="1" aria-label="Slide 2"
                                                style="width: 6px; height: 6px; border-radius: 50%;"></button>
                                            <button type="button" data-bs-target="#image-carousel<%=i%>"
                                                data-bs-slide-to="2" aria-label="Slide 3"
                                                style="width: 6px; height: 6px; border-radius: 50%;"></button>
                                            <button type="button" data-bs-target="#image-carousel<%=i%>"
                                                data-bs-slide-to="3" aria-label="Slide 3"
                                                style="width: 6px; height: 6px; border-radius: 50%;"></button>
                                        </div>
                                        <!-- carousal -->
                                       
                                        <!-- carousel control buttons -->
                                        <button class="carousel-control-prev" type="button"
                                            data-bs-target="#image-carousel<%=i%>" data-bs-slide="prev">
                                            <span aria-hidden="true"
                                                style="background-color: white; border-radius: 50% !important; width: 1.5rem; height: 1.5rem;"><i
                                                    class="fa-solid fa-chevron-left" style="color: grey;"></i></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button"
                                            data-bs-target="#image-carousel<%=i%>" data-bs-slide="next">

                                            <span aria-hidden="true"
                                                style="background-color: white; border-radius: 50% !important; width: 1.5rem; height: 1.5rem;"><i
                                                    class="fa-solid fa-chevron-right" style="color: grey;"></i></span>

                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    </div>
                                    <div>
                                        <div
                                            style="display: flex !important; align-items: center !important; justify-content: space-between;">
                                            <div>
                                                <h4>
                                                    <%=properties[i].propertyName%>
                                                </h4>
                                            </div>
                                            <div>
                                                <span>&#9733 <%=properties[i].rating%> New</span>
                                            </div>
                                        </div>
                                        <div>
                                            <p>
                                                <%=properties[i].state%>, <%=properties[i].country%>
                                            </p>
                                        </div>
                                        <div>
                                            <p class="card-text"><b><span>&#8377</span>
                                                    <%=properties[i].pricing%>
                                                </b> night</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <% } %>
                                <% } %>

            </div>

        </div>

        <!-- Floating button -->
        <div id="mapContainer">
            <div class="showMapConatiner">
                <button class="showMapBtn" type="Button">Show map <span><i class="fa-solid fa-map"></i></span></button>
            </div>
        </div>
        <br>
        <%- include("./partials/footer") %>
        <script>
            var loginSignupBtn = document.getElementsByClassName('loginSignupBtn');
            var popupDiv = document.getElementById('popupDiv');
            loginSignupBtn[0].onmouseenter = function () {
                popupDiv.style.display = "block";
            }
            popupDiv.onmouseleave = function () {
                popupDiv.style.display = "none";
            }
            document.getElementById('becomeHostBtn').onclick = function () {
                document.getElementById('registerPropertyForm').style.display = "block";
            }
            var showSupprtDiv = document.getElementById("supprtShowBtn");
            var supportDiv = document.getElementById("helpnSupportDiv");
            var hideSupportDiv = document.getElementById("supporHidetBtn");
            var mapcontainer = document.getElementById('mapContainer');
            showSupprtDiv.onclick = function () {
                supportDiv.style.display = "block";
                mapcontainer.style.display = "none";
            }

            hideSupportDiv.onclick = function () {
                supportDiv.style.display = "none";
                mapcontainer.style.display = "block";
            }
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
            </script>
        </body>
